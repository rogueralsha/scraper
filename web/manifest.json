{
  "manifest_version": 2,
  "name": "Dart Scraper",
  "description": "Provides various tools to assist with downloading sites and media",
  "version": "1.0",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["http://*.deviantart.com/*",
        "https://*.deviantart.com/*"
      ],
      "js": [
        "content.dart.js"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Dart Scraper"
  },
  "background": {
    "scripts": [
      "event_page.dart.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}